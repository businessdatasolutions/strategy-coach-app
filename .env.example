# API Keys - Choose at least one based on your LLM provider preference
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# Application Configuration
APP_NAME=AI Strategic Co-pilot
APP_VERSION=0.1.0
DEBUG=false
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Session Management
SESSION_TIMEOUT_MINUTES=60
MAX_SESSIONS=1000

# File Storage
STRATEGY_MAPS_DIR=data/sessions
LOGS_DIR=logs

# LangSmith Configuration (Optional - for observability)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_PROJECT=strategy-coach
LANGSMITH_API_KEY=your_langsmith_api_key_here

# Agent Configuration
# Options: google, openai, anthropic
DEFAULT_LLM_PROVIDER=google
DEFAULT_MODEL=gemini-2.0-flash-exp
DEFAULT_TEMPERATURE=0.7
MAX_TOKENS=4000

# Rate Limiting (Optional)
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000