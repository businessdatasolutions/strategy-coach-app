# =============================================================================
# AI Strategic Co-pilot Environment Configuration
# =============================================================================

# LLM Provider Configuration
# Choose your primary LLM provider: anthropic, openai, google
LLM_PROVIDER=anthropic

# Anthropic Claude Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI Configuration  
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini Configuration
GOOGLE_API_KEY=your_google_api_key_here

# LangSmith Tracing (Recommended for development and monitoring)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=strategy-coach-app-v2

# Application Configuration
APP_NAME=AI Strategic Co-pilot
APP_VERSION=2.0.0
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Session Management
SESSION_TIMEOUT_MINUTES=60
MAX_CONVERSATION_HISTORY=100

# Agent Configuration
DEFAULT_MODEL=claude-3-sonnet-20240229
TEMPERATURE=0.7
MAX_TOKENS=4000

# Testing Configuration
TEST_BUSINESS_CASE_PATH=testing/business-cases/business-case-for-testing.md
PLAYWRIGHT_HEADLESS=false
PLAYWRIGHT_TIMEOUT=30000

# Development Features
ENABLE_CORS=true
ENABLE_WEBSOCKETS=true
ENABLE_STATIC_FILES=true

# Production Settings (Override in production)
# DEBUG=false
# API_RELOAD=false
# ENABLE_CORS=false
# LOG_LEVEL=WARNING